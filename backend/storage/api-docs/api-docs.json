        "/tasks/reorder": {
            "post": {
                "tags": [
                    "Tasks"
                ],
                "summary": "Reorder tasks",
                "description": "Reorder tasks for the authenticated user by providing an array of task IDs in the desired order",
                "operationId": "3c5d6dcecf0a0036597455c6500b6a53",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "tasks"
                                ],
                                "properties": {
                                    "tasks": {
                                        "description": "Array of task IDs in the desired order",
                                        "type": "array",
                                        "items": {
                                            "type": "integer"
                                        },
                                        "example": [
                                            3,
                                            1,
                                            2
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
